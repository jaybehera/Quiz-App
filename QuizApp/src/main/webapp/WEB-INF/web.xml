<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	
	<welcome-file-list>
    <welcome-file>home.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>com.jay.quiz.controller.Register</servlet-class>
	</servlet>
	<servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.jay.quiz.controller.Login</servlet-class>
	</servlet>
	<servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.jay.quiz.controller.Logout</servlet-class>
	</servlet>
	<servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
		<servlet-name>AddQnServlet</servlet-name>
		<servlet-class>com.jay.quiz.controller.AddQuestion</servlet-class>
	</servlet>
	<servlet-mapping>
        <servlet-name>AddQnServlet</servlet-name>
        <url-pattern>/addquestion</url-pattern>
    </servlet-mapping>
    
    <servlet>
		<servlet-name>QuizServlet</servlet-name>
		<servlet-class>com.jay.quiz.controller.Quiz</servlet-class>
	</servlet>
	<servlet-mapping>
        <servlet-name>QuizServlet</servlet-name>
        <url-pattern>/quiz</url-pattern>
    </servlet-mapping>
    
</web-app>